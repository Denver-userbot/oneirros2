<!DOCTYPE html>
%html
 %head
  = render :partial => 'partials/scripts'
 %body
  = render :partial => 'partials/header'

  %div.uk-container.uk-container-large.uk-padding-large
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(0, true)"} Base Resources
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(1, true)"} Moon Resources
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(2, true)"} Weapons
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(3, true)"} Utility
   %ul#resources-accordion-base{"uk-accordion" => "multiple: true"}
    %li.uk-open
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Oil", data: @graphdata["3"], color: '#000000' }, { name: "Ore", data: @graphdata["4"], color: '#c60b0b' } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Uranium", data: @graphdata["11"], color: '#48bc00' } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Diamonds", data: @graphdata["15"], color: '#07b2af' } ]
    %li
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Liquid Oxygen", data: @graphdata["21"], color: '#1226a8' } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Helium-3", data: @graphdata["24"], color: '#60027c' } ]
    %li
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Aircrafts", data: @graphdata["1"] } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Tanks", data: @graphdata["2"] } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Missiles", data: @graphdata["14"] } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Bombers", data: @graphdata["16"] } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Lunar Tanks", data: @graphdata["22"] } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Space Stations", data: @graphdata["23"] } ]
    %li
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Antirad", data: @graphdata["13"], color: '#1226a8' } ]
       %div.uk-width-1-3@m
        = line_chart [ { name: "Rockets", data: @graphdata["20"], color: '#60027c' } ]
       
