<!DOCTYPE html>
%html
 %head
  = render :partial => 'partials/scripts'
  %title OneiRRos - Resources
 %body
  = render :partial => 'partials/header'

  %div.uk-container.uk-container-large.uk-padding-large
   %select.uk-form-small.uk-select.uk-width-1-6{"name" => "timefactor", "onchange" => "if(this.value != #{@timefactor}) { window.location.pathname = '/resources/' + this.value; }"}
    %option{"value" => 1, "selected" => ((@timefactor == 1) ? "selected" : nil)} 12 hours
    %option{"value" => 2, "selected" => ((@timefactor == 2) ? "selected" : nil)} 1 day
    %option{"value" => 6, "selected" => ((@timefactor == 6) ? "selected" : nil)} 3 days
    %option{"value" => 14, "selected" => ((@timefactor == 14) ? "selected" : nil)} 1 week
    %option{"value" => 28, "selected" => ((@timefactor == 28) ? "selected" : nil)} 2 weeks
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(0, true)"} Base Resources
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(1, true)"} Moon Resources
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(2, true)"} Weapons
   %button.uk-button{"onclick" => "UIkit.accordion($('#resources-accordion-base')).toggle(3, true)"} Utility
   %ul#resources-accordion-base{"uk-accordion" => "multiple: true"}
    %li.uk-open
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Oil", data: @graphdata["3"], color: '#000000' }, { name: "Ore", data: @graphdata["4"], color: '#c60b0b' } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Uranium", data: @graphdata["11"], color: '#48bc00' } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Diamonds", data: @graphdata["15"], color: '#07b2af' } ], thousands: "," 
    %li
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Liquid Oxygen", data: @graphdata["21"], color: '#1226a8' } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Helium-3", data: @graphdata["24"], color: '#60027c' } ], thousands: "," 
    %li
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Aircrafts", data: @graphdata["1"] } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Tanks", data: @graphdata["2"] } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Missiles", data: @graphdata["14"] } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Bombers", data: @graphdata["16"] } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Battleships", data: @graphdata["18"] } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Lunar Tanks", data: @graphdata["22"] } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Space Stations", data: @graphdata["23"] } ], thousands: "," 
    %li
     %div.uk-accordion-content
      %div.uk-grid-large{"uk-grid" => ""}
       %div.uk-width-1-3@m
        = line_chart [ { name: "Antirad", data: @graphdata["13"], color: '#1226a8' } ], thousands: "," 
       %div.uk-width-1-3@m
        = line_chart [ { name: "Rockets", data: @graphdata["20"], color: '#60027c' } ], thousands: "," 
       
